<?xml version="1.0" encoding="UTF-8"?>

<faces-config
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/webapp-facesconfig_2_0.xsd"
        version="2.0">

    <!--
     * @Author Rodrigo de Miguel González
     * @Date 2017-2018
     * TFG - Atravesando las Capas de una Aplicación Empresarial: Demostrador Tecnológico J2EE
     -->

    <!-- ********* REGLAS DE NAVEGACIÓN ********* -->

    <navigation-rule>
        <from-view-id>/views/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>indice</from-outcome>
            <to-view-id>/views/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>


    <navigation-rule>
        <from-view-id>/views/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>a_modulo_usuario</from-outcome>
            <to-view-id>/views/Modulo_Usuario/vista_usuario.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>


    <navigation-rule>
        <from-view-id>/views/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>a_modulo_administrador</from-outcome>
            <to-view-id>/views/Modulo_Administrador/vista_admin.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

    </navigation-rule>

    <navigation-rule>
        <from-view-id>/views/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>a_admin2</from-outcome>
            <to-view-id>/views/Modulo_Administrador/vista_admin.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/views/Login/indiceRedireccion.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>indice</from-outcome>
            <to-view-id>/views/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>



</faces-config>
