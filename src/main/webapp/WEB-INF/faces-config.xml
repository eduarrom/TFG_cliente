    <!-- ********* REGLAS DE NAVEGACIÃ“N ********* -->

    <navigation-rule>
        <from-view-id>/views/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>indice</from-outcome>
            <to-view-id>/views/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>


    <navigation-rule>
        <from-view-id>/views/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>a_user</from-outcome>
            <to-view-id>/views/usuario/usuario.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>


    <navigation-rule>
        <from-view-id>/views/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>a_admin</from-outcome>
            <to-view-id>/views/admin/admin.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/views/Login/indiceRedireccion.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>indice</from-outcome>
            <to-view-id>/views/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>


    <navigation-rule>
        <navigation-case>
            <from-outcome>usuario</from-outcome>
            <to-view-id>/views/usuario/usuario.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <navigation-case>
            <from-outcome>admin</from-outcome>
            <to-view-id>/views/admin/admin.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

</faces-config>
